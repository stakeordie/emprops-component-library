FROM python:3.9-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the test client
COPY test_websocket_client.py .

# Set Python to run unbuffered for better log output
ENV PYTHONUNBUFFERED=1

# Default command
CMD ["python", "test_websocket_client.py"]

# Allow setting different modes via command arguments
ENTRYPOINT ["python", "test_websocket_client.py"]
